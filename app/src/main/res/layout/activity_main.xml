<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#de000000"
    tools:context="com.example.magic.projectwadeeny.MainActivity">

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="520dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#4486d1"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView"
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:background="#333874"
            android:fontFamily="sans-serif-medium"
            android:padding="10dp"
            android:text="TransPoint"
            android:textAlignment="center"
            android:textColor="#f7f7f9"
            android:textSize="40dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:text="where do you go ?"
            android:textAlignment="center"
            android:textColor="#f2f2f2"
            android:textSize="25dp" />

        <ImageView
            android:id="@+id/myimage"
            android:layout_width="250dp"
            android:layout_height="170dp"
            android:layout_marginLeft="64dp"
            android:src="@drawable/bus5"

            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/signup"
                android:layout_width="110dp"
                android:layout_height="60dp"
                android:layout_marginLeft="112dp"
                android:layout_marginTop="10dp"
                android:background="#5c53c9"
                android:padding="20dp"
                android:text="Sign Up"
                android:textColor="#fff"
                android:textSize="18dp" />

            <Button

                android:id="@+id/signin"
                android:layout_width="110dp"
                android:layout_height="60dp"
                android:layout_marginLeft="112dp"
                android:layout_marginTop="15dp"
                android:background="#5c53c9"
                android:padding="20dp"
                android:text="Sign In"
                android:textColor="#fff"
                android:textSize="18dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
